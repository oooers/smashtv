                        android:textSize="@dimen/ts_24" />

                    <ImageView
                        android:layout_width="26mm"
                        android:layout_height="match_parent"
                        android:layout_marginStart="12mm"
                        android:layout_marginLeft="12mm"
                        android:gravity="center"
                        android:src="@drawable/icon_setting_right" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llMediaCodec"

                android:layout_height="60mm"
                android:layout_marginBottom="12mm"
                android:focusable="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llRender"
                    android:layout_width="@dimen/vs_0"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12mm"
                    android:layout_weight="1"
                    android:background="@drawable/shape_setting_model_focus"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="24mm"
                    android:paddingRight="24mm">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
